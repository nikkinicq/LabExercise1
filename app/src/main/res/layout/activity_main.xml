<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dominique.labexercise1.MainActivity">

    <TableRow
        android:layout_marginLeft="60px"
        android:layout_marginTop="70px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz 1:"
            android:textSize="60px"/>
        <EditText
            android:id="@+id/etQuiz1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Type Grade"
            android:paddingLeft="20px"
            android:textSize="40px"
            />
    </TableRow>

    <TableRow
        android:layout_marginLeft="60px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz 2:"
            android:textSize="60px"/>
        <EditText
            android:id="@+id/etQuiz2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Type Grade"
            android:paddingLeft="20px"
            android:textSize="40px"
            />
    </TableRow>

    <TableRow
        android:layout_marginLeft="60px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seatwork:"
            android:textSize="60px"/>
        <EditText
            android:id="@+id/etSW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Type Grade"
            android:paddingLeft="20px"
            android:textSize="40px"
            />
    </TableRow>

    <TableRow
        android:layout_marginLeft="60px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lab Exercise:"
            android:textSize="60px"/>
        <EditText
            android:id="@+id/etLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Type Grade"
            android:paddingLeft="20px"
            android:textSize="40px"
            />
    </TableRow>

    <TableRow
        android:layout_marginLeft="60px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Major Exam:"
            android:textSize="60px"/>
        <EditText
            android:id="@+id/etME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Type Grade"
            android:paddingLeft="20px"
            android:textSize="40px"
            />
    </TableRow>


        <Button
            android:id="@+id/btnCompute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70px"
            android:onClick="callSecondActivity"
            android:text="COMPUTE"
            android:textSize="60px" />

</TableLayout>
